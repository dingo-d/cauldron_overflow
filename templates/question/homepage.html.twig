{% extends 'content_base.html.twig' %}

{% block content_body %}
    <div class="bg-gradient-br-red-blue text-3xl p-20 text-white font-bold mb-4">
        <div class="container">
            <h1>Your Questions Answered</h1>
            <p class="text-lg">And even answers for those questions you didn't think to ask!</p>
        </div>
    </div>
    <div class="container">
        <div class="row mb-3">
            <div class="col">
                <button class="transition-text transition-border ease-in-out duration-300 text-sm px-4 py-2 border rounded text-gray bg-transparent border-indigo-500 text-indigo-500 hover:border-indigo-700 hover:bg-indigo-700 hover:text-white mt-4 lg:mt-0">
                    Ask a Question
                </button>
            </div>
        </div>
        <div class="row">
            {% for question in questions %}
                <div class="mb-5 shadow-sm">
                    <div class="bg-gray-200 p-4">
                        <div class="row">
                            <div class="mb-5 text-center">
                                <img src="{{ asset('images/tisha.png') }}" width="100" height="100">
                            </div>
                            <div class="col">
                                <a class="text-xl uppercase mb-5 block"
                                   href="{{ path('app_question_show', { slug: question.slug }) }}"><h2>
                                        {{ question.title }}</h2></a>
                                <div class="q-display p-3">
                                    <svg xmlns="http://www.w3.org/2000/svg" aria-hidden="true" focusable="false"
                                         data-prefix="fas" data-icon="quote-left" class="inline-block" width="16"
                                         height="16" role="img" viewBox="0 0 512 512">
                                        <path fill="currentColor"
                                              d="M464 256h-80v-64c0-35.3 28.7-64 64-64h8c13.3 0 24-10.7 24-24V56c0-13.3-10.7-24-24-24h-8c-88.4 0-160 71.6-160 160v240c0 26.5 21.5 48 48 48h128c26.5 0 48-21.5 48-48V304c0-26.5-21.5-48-48-48zm-288 0H96v-64c0-35.3 28.7-64 64-64h8c13.3 0 24-10.7 24-24V56c0-13.3-10.7-24-24-24h-8C71.6 32 0 103.6 0 192v240c0 26.5 21.5 48 48 48h128c26.5 0 48-21.5 48-48V304c0-26.5-21.5-48-48-48z"/>
                                    </svg>
                                    <p class="d-inline">{{ question.questionContent }}</p>
                                    <p class="pt-4"><strong>{{ question.author.name }}</strong></p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <a class="answer-link text-white" href="{{ path('app_question_show', { slug: question.slug }) }}">
                        <p class="bg-blue-800 text-center p-3">
                            <svg xmlns="http://www.w3.org/2000/svg" aria-hidden="true" focusable="false"
                                 data-prefix="fas" data-icon="magic" class="inline-block" width="16" height="16"
                                 role="img" viewBox="0 0 512 512">
                                <path fill="currentColor"
                                      d="M224 96l16-32 32-16-32-16-16-32-16 32-32 16 32 16 16 32zM80 160l26.66-53.33L160 80l-53.34-26.67L80 0 53.34 53.33 0 80l53.34 26.67L80 160zm352 128l-26.66 53.33L352 368l53.34 26.67L432 448l26.66-53.33L512 368l-53.34-26.67L432 288zm70.62-193.77L417.77 9.38C411.53 3.12 403.34 0 395.15 0c-8.19 0-16.38 3.12-22.63 9.38L9.38 372.52c-12.5 12.5-12.5 32.76 0 45.25l84.85 84.85c6.25 6.25 14.44 9.37 22.62 9.37 8.19 0 16.38-3.12 22.63-9.37l363.14-363.15c12.5-12.48 12.5-32.75 0-45.24zM359.45 203.46l-50.91-50.91 86.6-86.6 50.91 50.91-86.6 86.6z"/>
                            </svg>
                            {{ 'num_of_answers'|trans({'answers': answerData[question.id]}) }}
                        </p>
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}

